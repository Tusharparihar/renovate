{
  "extends": ["config:base"],
  "terraform": {
    "enabled": true,
    "fileMatch": ["^.*\\.tf$"],
    "ignoreUnstable": true
  },
  "branchConcurrentLimit": 10,
  "packageRules": [
    {
      "matchPackagePatterns": ["azurerm"],
      "groupName": "azurerm provider updates",
      "rangeStrategy": "n-2",
      "prHourlyLimit": 5
    }
  ]
}
